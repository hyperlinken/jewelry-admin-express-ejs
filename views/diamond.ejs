<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>MAGADH — Diamond Collection</title>

  <!-- External CSS (same as HTML) -->
  <link rel="stylesheet" href="/csss/style.css"/> 
  <link rel="stylesheet" href="/csss/slideshow.css">
  <link rel="stylesheet" href="/csss/sectionProduct.css">
  <link rel="stylesheet" href="/csss/contact.css">
  <link rel="stylesheet" href="/csss/branchsection.css">
  <link rel="stylesheet" href="/csss/aboutsection.css">

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;700&family=Inter:wght@300;400;500&display=swap" rel="stylesheet">

  <!-- Diamond page specific style -->
  <link rel="stylesheet" href="/css/diamond.css">

</head>
<body>

  <!-- HEADER -->
  <header class="navbar">
    <div class="navbar-top">
      <div class="logo">
        <a class="logo" href="/">MAGADH</a>
      </div>
      <span class="menu-toggle" id="menu-toggle">&#9776;</span>
    </div>
    <nav class="nav-links" id="nav-links">
      <a href="/collection" data-target="toproduct">Collection</a>
      <a href="/branch" data-target="tobranch">Branch</a>
      <a href="/about" data-target="toinfo">About Us</a>
      <a href="/contact" data-target="Information">Contact</a>
      <a href="/gold">Gold</a>
      <a href="/silver">Silver</a>
      <a href="/diamond">Diamond</a>
      <a href="/gemstone">GemsStone</a>
    </nav>
  </header>

  <!-- HERO -->
  <section class="diamond-hero">
    <h1>Diamond Collection</h1>
    <p>Exquisite diamonds crafted to perfection</p>
  </section>

  <!-- MAIN CONTENT -->
  <main class="diamond-wrap">
    <!-- Sidebar -->
    <aside class="diamond-sidebar">
      <h3>Browse Categories</h3>
      <ul class="diamond-types" id="diamondTypes">
        <% 
          const categoryOrder = ['Ring','Earring','Necklace','Bracelet','Pendant','Bangle'];
          categoryOrder.forEach(category => { 
            const productCount = products[category] ? products[category].length : 0;
            if (productCount > 0) {
        %>
          <li>
            <a href="#<%= category.toLowerCase().replace(' ', '-') %>" data-target="<%= category.toLowerCase().replace(' ', '-') %>">
              <%= category %>s 
              <span class="diamond-chip"><%= productCount %></span>
            </a>
          </li>
        <% }}); %>
      </ul>
    </aside>

    <!-- Product sections -->
    <section class="diamond-content" id="diamondContent">
      <% 
        let hasProducts = false;
        categoryOrder.forEach(category => { 
          if (products[category] && products[category].length > 0) { 
            hasProducts = true;
      %>
        <section class="diamond-section" id="<%= category.toLowerCase().replace(' ', '-') %>">
          <header>
            <h2><%= category %>s</h2>
            <div class="diamond-count"><%= products[category].length %> designs</div>
          </header>
          <div class="diamond-grid">
            <% products[category].forEach(product => { %>
              <article class="diamond-card">
                <img src="<%= product.image %>" alt="<%= product.name %>">
                <div class="diamond-meta">
                  <span class="diamond-name"><%= product.name %></span>
                  <span class="diamond-tag">₹<%= product.price.toLocaleString() %></span>
                </div>
              </article>
            <% }); %>
          </div>
        </section>
      <% }}); %>
      <% if (!hasProducts) { %>
        <div class="diamond-section"><p>No diamond products available.</p></div>
      <% } %>
    </section>
  </main>

  <!-- Back to top -->
  <button class="diamond-top" id="backToTop" aria-label="Back to top">↑</button>

  <!-- FOOTER -->
  <div class="footer-bottom">
    <p>© 2025 Magadh Jewels. All rights reserved.</p>
  </div>

  <!-- JS -->
  <script src="/js/diamond.js"></script>
</body>
</html>